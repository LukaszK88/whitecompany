<!-- Modal -->
<div class="modal fade bs-example-modal-sm" id="signIn" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Sign in</h3>
                </div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.signin') }}" method="post">
                        <fieldset>
                            <div class="form-group {{ errors.email ? 'has-error': '' }} ">
                                <input class="form-control" placeholder="E-mail" name="email" type="text" value="{{ old.email }}">
                                {% if errors.email %}
                                    <span class="help-block">
                                        {% if errors.email %}
                                            <span class="badge"><i class="fa fa-exclamation" ></i></span>
                                        {% endif %}
                                    {{ errors.email | first }}
                                </span>
                                {% endif %}
                            </div>
                            <div class="form-group {{ errors.password ? 'has-error': '' }} ">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                {% if errors.password %}
                                    <span class="help-block">
                                        {% if errors.password %}
                                            <span class="badge"><i class="fa fa-exclamation" ></i></span>
                                        {% endif %}
                                    {{ errors.password | first }}
                                </span>
                                {% endif %}
                            </div>

                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>

                                <label class="pull-right">
                                    <a  href="{{ path_for('auth.password.forgot') }}" >Forgot password</a>
                                </label>
                            </div>

                            <button type="submit" class="btn btn-lg btn-custom btn-block">Sign in</button><button class="btn btn-lg btn-custom btn-block pull-right divMsg" style="display:none;"><img src="{{ base_url() }}/img/1351237.gif" height="25px" > Please wait... </button>
                            {{ csrf.field | raw }}
                        </fieldset>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
