{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Change password</h3>
                </div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.password.change') }}" method="post">
                        <fieldset>
                          {% if auth.user.password %}
                            <div class="form-group {{ errors.password_old ? 'has-error': '' }} ">
                                <input class="form-control" placeholder="Current password" name="password_old" type="password" value="">
                                {% if errors.password_old %}
                                    <span class="help-block">
                                    {{ errors.password_old | first }}
                                </span>
                                {% endif %}
                            </div>
                          {% endif %}
                            <div class="form-group {{ errors.password ? 'has-error': '' }} ">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                {% if errors.password %}
                                    <span class="help-block">
                                    {{ errors.password | first }}
                                </span>
                                {% endif %}
                            </div>
                            <div class="form-group {{ errors.password_again ? 'has-error': '' }} ">
                                <input class="form-control" placeholder="Password again" name="password_again" type="password" value="">
                                {% if errors.password_again %}
                                    <span class="help-block">
                                    {{ errors.password_again | first }}
                                </span>
                                {% endif %}
                            </div>

                            <input type="submit" value="Update" class="btn btn-lg btn-custom btn-block">
                            {{ csrf.field | raw }}
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}