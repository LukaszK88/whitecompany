{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Password recovery</h3>
                </div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.password.forgot') }}" method="post">
                        <fieldset>
                            <div class="form-group {{ errors.username ? 'has-error': '' }} ">
                                <input class="form-control" placeholder="Username" name="username" type="text" value="">
                                {% if errors.username %}
                                    <span class="help-block">
                                    {{ errors.username | first }}
                                </span>
                                {% endif %}
                            </div>

                            <input type="submit" value="Send" class="btn btn-lg btn-success btn-block">
                            {{ csrf.field | raw }}
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}