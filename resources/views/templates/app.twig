<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Bootstrap 101 Template</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="{{ base_url() }}/css/bootstrap.css">
    <link rel="stylesheet" href="{{ base_url() }}/css/logo-nav.css">
    <link rel="stylesheet" href="{{ base_url() }}/css/datepicker.css">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.1/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="{{ base_url() }}/css/custom.css">

    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>

</head>
<body>

    {% include 'templates/partials/navigation.twig' %}

    {% include 'auth/signup.twig' %}

    {% include 'auth/signin.twig' %}

    {% include 'user/profile.twig' %}


        <!-- Page Content -->
        <div class="container">
            <div class="row">
                <div class="col-lg-12">

                    {% include 'templates/partials/flash.twig' %}
                    {% block content %}{% endblock %}


                </div>
            </div>
        </div>
        <!-- /.container -->






<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->

    <script src="{{ base_url() }}/js/jquery.js"></script>
<!-- Latest compiled and minified JavaScript -->
    <script src="{{ base_url() }}/js/bootstrap.min.js"></script>
    <script src="{{ base_url() }}/js/bootstrap-datepicker.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.1/js/bootstrap-select.min.js"></script>
    <script>
        $('.datepicker').datepicker()
    </script>

<script>
    {% if auth.user and auth.user.name is empty and auth.user.temp_password is empty %}
    $(document).ready(function () {

        $('#updateProfile').modal('show');

    });
    {% endif %}
</script>
    {% if param1|first == 'profileError' %}
        <script>
            $(window).load(function(){
                $('#updateProfile').modal('show');
            });
        </script>
    {% endif %}
    {% if param1|first == 'registerError' %}
        <script>
            $(window).load(function(){
                $('#signUp').modal('show');
            });
        </script>
    {% endif %}
    {% if param1|first == 'logInError' %}
        <script>
            $(window).load(function(){
                $('#signIn').modal('show');
            });
        </script>
    {% endif %}

</body>
</html>